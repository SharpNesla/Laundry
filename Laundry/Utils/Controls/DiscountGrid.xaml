<UserControl x:Class="Laundry.Utils.Controls.DiscountGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Laundry.Utils.Controls"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:model="clr-namespace:Laundry.Model"
             mc:Ignorable="d"
             Name="OwnControl"
             d:DesignHeight="450" d:DesignWidth="800">

  <ItemsControl ItemsSource="{Binding Entities}">
    <ItemsControl.ItemTemplate>
      <DataTemplate>
        <materialDesign:Card Margin="64">
          <TextBlock Text="{Binding Edge}" />
        </materialDesign:Card>
      </DataTemplate>
    </ItemsControl.ItemTemplate>

  </ItemsControl>
</UserControl>