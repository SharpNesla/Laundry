<UserControl x:Class="Laundry.Views.OrderEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Laundry.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             xmlns:controls="clr-namespace:Laundry.Utils.Controls" d:DesignWidth="800" d:DesignHeight="600"
             Background="{DynamicResource MaterialDesignPaper}">
  <DockPanel VerticalAlignment="Stretch">
    <materialDesign:ColorZone DockPanel.Dock="Top" materialDesign:ShadowAssist.ShadowDepth="Depth1" Mode="PrimaryMid"
    Padding="16,20,20,20">      
      <StackPanel Orientation="Horizontal">

        <materialDesign:PackIcon Kind="TShirtCrew" VerticalAlignment="Center" Height="24" Width="24"/>
        <TextBlock

          Style="{StaticResource MaterialDesignTitleTextBlock}"
          VerticalAlignment="Center"
          Margin="8 0 0 0" Text="{StaticResource OrderEditor.Title}" />
      </StackPanel>
    </materialDesign:ColorZone>
    <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                HorizontalAlignment="Right" Margin="0,0,24,24">
      <Button
        Style="{StaticResource MaterialDesignFlatButton}"
        IsDefault="True" Margin="0,0,20,0"
        Command="materialDesign:DialogHost.CloseDialogCommand">
        <Button.CommandParameter>
          <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
            True
          </system:Boolean>
        </Button.CommandParameter>
        ПРИНЯТЬ
      </Button>
      <Button Name="Cancel"
        Style="{StaticResource MaterialDesignFlatButton}"
        IsCancel="True">
        ОТМЕНИТЬ
      </Button>
    </StackPanel>
    <Grid Margin="24">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="197*" MinWidth="300" MaxWidth="500"/>
        <ColumnDefinition Width="371*"/>
      </Grid.ColumnDefinitions>
      <materialDesign:Card Padding="16" Margin="0,0,16,0" VerticalAlignment="Stretch">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="38"></RowDefinition>
            <RowDefinition Height="38"></RowDefinition>
            <RowDefinition Height="38"></RowDefinition>
            <RowDefinition></RowDefinition>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
          </Grid.ColumnDefinitions>
          <TextBlock Grid.ColumnSpan="2" Style="{StaticResource MaterialDesignTitleTextBlock}"
                     Text="{StaticResource OrderEditor.OrderInfo}"/>
          <ComboBox Grid.Row="1" Grid.ColumnSpan="2" materialDesign:ComboBoxAssist.ShowSelectedItem="True"
                    materialDesign:HintAssist.Hint="{StaticResource ClientEditor.Title}" Margin="2,3,0,3">
            <ComboBoxItem>
              Анисимов Александр Филипович т.+7 (942) 098-42-08
            </ComboBoxItem>
          </ComboBox>
          <DatePicker Grid.Row="2" Grid.Column="0"
            materialDesign:HintAssist.Hint="Дата исполнения"
            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
            VerticalAlignment="Center" Margin="2,0,0,0" />
          <CheckBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom"
                    Style="{StaticResource MaterialDesignCheckBox}" Margin="10,0,0,0" Height="20" >
            Скидка
          </CheckBox>
          <TextBox Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="0"
            Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
            Margin="2,16,0,0"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto"
            materialDesign:HintAssist.Hint="Комментарий"
            IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextFieldTextBoxEnabledComboBox}"/>
        </Grid>
      </materialDesign:Card>

      <materialDesign:Card
        Padding="16" Grid.Column="1" VerticalAlignment="Stretch">
        <DockPanel>
          <TextBlock DockPanel.Dock="Top" Style="{StaticResource MaterialDesignTitleTextBlock}"
                     Text="{StaticResource OrderEditor.ClothInfo}" />
          <DockPanel DockPanel.Dock="Bottom" LastChildFill="True">
            <Button Name="AddOrder" DockPanel.Dock="Right" Margin="0,0,9,0" Style="{StaticResource MaterialDesignFlatButton}" 
                    HorizontalAlignment="Left" ToolTip="{StaticResource OrderEditor.AddClothInstanceButtonTooltip}">
              <materialDesign:PackIcon Kind="Plus" Height="24" Width="24" />
            </Button>
            <StackPanel Orientation="Horizontal">
              <TextBlock Margin="8,0,0,0" VerticalAlignment="Center" Style="{StaticResource MaterialDesignBody2TextBlock}" 
                         Text="Заказ от 21.01.2019, 13:30. Цена: 1300р (33 вещи)"/>
            </StackPanel>
          </DockPanel>

          <controls:ClothGrid Margin="0,16,0,0" ClothInstances="{Binding ClothInstances}"></controls:ClothGrid>
           
        </DockPanel>

      </materialDesign:Card>
    </Grid>
  </DockPanel>
</UserControl>