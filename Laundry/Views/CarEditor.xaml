<utils:ActivityControl x:Class="Laundry.Views.CarEditor"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="clr-namespace:Laundry.Views"
                       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                       mc:Ignorable="d"
                       xmlns:controls="clr-namespace:Laundry.Views"
                       xmlns:utils="clr-namespace:Laundry.Utils"
                       xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
                       d:DesignWidth="800" d:DesignHeight="600"
                       Background="{DynamicResource MaterialDesignPaper}">
  <DockPanel VerticalAlignment="Stretch">
    <materialDesign:ColorZone DockPanel.Dock="Top" materialDesign:ShadowAssist.ShadowDepth="Depth1" Mode="PrimaryMid"
                              Padding="16,20,20,20">
      <StackPanel Orientation="Horizontal">

        <materialDesign:PackIcon Kind="Car" VerticalAlignment="Center" Height="24" Width="24" />
        <TextBlock

          Style="{StaticResource MaterialDesignTitleTextBlock}"
          VerticalAlignment="Center"
          Margin="8 0 0 0" Text="{StaticResource CarEditor.Title}" />
      </StackPanel>
    </materialDesign:ColorZone>
    <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                HorizontalAlignment="Right" Margin="0,0,24,24">
      <Button
        Style="{StaticResource MaterialDesignFlatButton}"
        IsDefault="True" Margin="0,0,20,0"
        Command="materialDesign:DialogHost.CloseDialogCommand">
        <Button.CommandParameter>
          <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
            True
          </system:Boolean>
        </Button.CommandParameter>
        ПРИНЯТЬ
      </Button>
      <Button
        Style="{StaticResource MaterialDesignFlatButton}"
        IsCancel="True" Click="OnDisableButtonClick">
        ОТМЕНИТЬ
      </Button>
    </StackPanel>
    <Grid Margin="24">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="197*" MinWidth="300" MaxWidth="500" />
        <ColumnDefinition Width="371*" />
      </Grid.ColumnDefinitions>
      <materialDesign:Card Padding="16" Margin="0,0,16,0" VerticalAlignment="Stretch">
        <StackPanel>
          <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}"
                     Text="{StaticResource CarEditor.MainInfoTitle}" />
          <ComboBox Grid.Row="1" Grid.ColumnSpan="2" materialDesign:ComboBoxAssist.ShowSelectedItem="True"
                    materialDesign:HintAssist.Hint="Водитель" Margin="0,16,0,3">
            <ComboBoxItem>
              Анисимов Александр Филипович т.+7 (942) 098-42-08
            </ComboBoxItem>
          </ComboBox>
          <TextBox Margin="0,8,0,8" materialDesign:HintAssist.Hint="Марка и модель"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
          <TextBox Margin="0,0,0,8" materialDesign:HintAssist.Hint="Регистрационный знак"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
          <TextBox Margin="0,0,0,8" materialDesign:HintAssist.Hint="Идентификационный номер (VIN)"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
          <TextBox Margin="0,0,0,8" materialDesign:HintAssist.Hint="Серия и номер ПТС"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
          <TextBox Margin="0,0,0,8" materialDesign:HintAssist.Hint="Цвет"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
          <DatePicker materialDesign:HintAssist.Hint="Год выпуска"
                      Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="0,0,0,16"
                      HorizontalAlignment="Left" />
        </StackPanel>
      </materialDesign:Card>

      <dragablz:TabablzControl Background="{StaticResource MaterialDesignBackground}" Grid.Column="1" VerticalAlignment="Stretch">
        <TabItem Header="{StaticResource CarEditor.CouriersInfo}">
          <materialDesign:Card Padding="16" VerticalAlignment="Stretch">
            <DockPanel>
              <DockPanel DockPanel.Dock="Bottom" LastChildFill="True">
                <Button DockPanel.Dock="Right" Margin="0,0,9,0" Style="{StaticResource MaterialDesignFlatButton}"
                        HorizontalAlignment="Left" ToolTip="MaterialDesignFloatingActionMiniButton">
                  <materialDesign:PackIcon Kind="Plus" Height="24" Width="24" />

                </Button>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Margin="8,0,0,0" VerticalAlignment="Center"
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             Text="2 курьера, 1 в процессе доставки" />
                </StackPanel>
              </DockPanel>
              <DataGrid

                Background="{StaticResource MaterialDesignCardBackground}"
                CanUserSortColumns="True"
                CanUserAddRows="False"
                CanUserResizeColumns="True"
                CellStyle="{StaticResource CellStyle}"
                AutoGenerateColumns="False"
                ItemsSource="{Binding Clients}">
                <DataGrid.Columns>
                  <DataGridCheckBoxColumn CanUserReorder="False" MinWidth="64" Width="64"
                                          ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                                          EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}">
                    <DataGridCheckBoxColumn.Header>
                      <Border
                        Background="Transparent"
                        Padding="9.3 0 0 0"
                        HorizontalAlignment="Center">
                        <CheckBox />
                      </Border>
                    </DataGridCheckBoxColumn.Header>
                  </DataGridCheckBoxColumn>
                  <DataGridTemplateColumn CanUserReorder="True" IsReadOnly="True" MinWidth="96"
                                          SortMemberPath="Surname"
                                          Header="Фамилия">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding Surname}" VerticalAlignment="Center" />
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>
                  <DataGridTemplateColumn CanUserReorder="True" IsReadOnly="True" MinWidth="96" SortMemberPath="Name"
                                          Header="Имя">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding Name}" VerticalAlignment="Center" />
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>
                  <DataGridTemplateColumn CanUserReorder="True" IsReadOnly="True" MinWidth="96"
                                          SortMemberPath="Patronymic"
                                          Header="Отчество">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding Patronymic}"
                                   VerticalAlignment="Center" />
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>

                  <DataGridTemplateColumn CanUserReorder="True" IsReadOnly="True" SortMemberPath="DateBirth"
                                          MinWidth="164"
                                          Header="Дата рождения">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding DateBirth}"
                                   VerticalAlignment="Center" />
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>

                  <DataGridTemplateColumn CanUserReorder="True" IsReadOnly="True" SortMemberPath="DateBirth"
                                          MinWidth="164"
                                          Header="Статус">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <TextBlock TextTrimming="CharacterEllipsis" Text="" VerticalAlignment="Center" />
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>

                  <DataGridTemplateColumn CanUserReorder="True" IsReadOnly="True" Width="*" />
                  <DataGridTemplateColumn CanUserReorder="False" IsReadOnly="True" MinWidth="132">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                          <Button Margin="0" Foreground="{StaticResource MaterialDesignBodyLight}"
                                  Style="{StaticResource MaterialDesignFlatButton}">
                            <materialDesign:PackIcon
                              Kind="InfoOutline"
                              Height="24"
                              Width="24" />
                          </Button>

                          <Button Margin="0" Foreground="{StaticResource MaterialDesignBodyLight}"
                                  Style="{StaticResource MaterialDesignFlatButton}">
                            <materialDesign:PackIcon Kind="Edit" Height="24" Width="24" />
                          </Button>
                        </StackPanel>
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>
                </DataGrid.Columns>
              </DataGrid>
            </DockPanel>

          </materialDesign:Card>
        </TabItem>
      </dragablz:TabablzControl>
    </Grid>
  </DockPanel>
</utils:ActivityControl>