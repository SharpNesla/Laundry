<UserControl x:Class="Laundry.Views.EmployeeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Laundry.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             xmlns:controls="clr-namespace:Laundry.Views" d:DesignWidth="532"
             Background="{DynamicResource MaterialDesignPaper}">
    <DockPanel Width="532">
        <materialDesign:ColorZone DockPanel.Dock="Top" materialDesign:ShadowAssist.ShadowDepth="Depth1" Mode="PrimaryMid"
                              Padding="24">
            <StackPanel Orientation="Horizontal">

                <TextBlock

          Style="{StaticResource MaterialDesignHeadlineTextBlock}"
          VerticalAlignment="Center"
          Margin="8 0 0 0">
          Рабочий
                </TextBlock>
            </StackPanel>
        </materialDesign:ColorZone>
        <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                HorizontalAlignment="Right" Margin="0,0,24,24">
            <Button
        Style="{StaticResource MaterialDesignFlatButton}"
        IsDefault="True" Margin="0,0,20,0"
        Command="materialDesign:DialogHost.CloseDialogCommand">
                <Button.CommandParameter>
                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                        True
                    </system:Boolean>
                </Button.CommandParameter>
                ПРИНЯТЬ
            </Button>
            <Button
        Style="{StaticResource MaterialDesignFlatButton}"
        IsCancel="True"
        Command="materialDesign:DialogHost.CloseDialogCommand">
                <Button.CommandParameter>
                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                        False
                    </system:Boolean>
                </Button.CommandParameter>
                ОТМЕНИТЬ
            </Button>
        </StackPanel>
        <StackPanel Margin="32,32,32,24">
            <TextBox Margin="0,0,0,8" materialDesign:HintAssist.Hint="Фамилия"
               Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox Margin="0,0,0,8" materialDesign:HintAssist.Hint="Имя"
               Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox Margin="0,0,0,8" materialDesign:HintAssist.Hint="Отчество"
               Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox Margin="0,0,0,8" materialDesign:HintAssist.Hint="Номер телефона"
          Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <ComboBox Margin="0,24,0,8" Width="140" HorizontalAlignment="Left"
                materialDesign:HintAssist.Hint="Должность">
                <ComboBoxItem>
                    Приёмщик
                </ComboBoxItem>
                <ComboBoxItem>
                    Директор
                </ComboBoxItem>
                <ComboBoxItem>
                    Курьер
                </ComboBoxItem>
                <ComboBoxItem>
                    Прачечник
                </ComboBoxItem>
            </ComboBox>
            <StackPanel Margin="0,8,0,0">
                <TextBlock Margin="0,0,0,8"
                   Style="{StaticResource MaterialDesignSubheadingTextBlock}">
          Пол
                </TextBlock>
                <RadioButton Margin="0,0,0,4" Style="{StaticResource MaterialDesignRadioButton}"
                     Tag="True">
                    М
                </RadioButton>
                <RadioButton Style="{StaticResource MaterialDesignRadioButton}"
                     Tag="True">
                    Ж
                </RadioButton>
            </StackPanel>
            <DatePicker
        
        materialDesign:HintAssist.Hint="Дата рождения"
        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="0,0,0,16" HorizontalAlignment="Left"/>
            <CheckBox Margin="0,0,0,0"
        Style="{StaticResource MaterialDesignCheckBox}">
                Полная занятость
            </CheckBox>
        </StackPanel>

    </DockPanel>
</UserControl>