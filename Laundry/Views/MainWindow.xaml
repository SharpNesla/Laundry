                      </Canvas>
                    </Viewbox>
                    <TextBlock TextAlignment="Center" Margin="0 0 24 0"
                               Style="{StaticResource MaterialDesignTitleTextBlock}" Height="22">
                      <Run Text="Прачечная" />
                    </TextBlock>
                  </DockPanel>
                </materialDesign:ColorZone>
                <Border Padding="16">
                  <StackPanel>
                    <TextBox Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                             materialDesign:HintAssist.Hint="Логин"
                             Margin="0,0,0,16" />
                    <PasswordBox Style="{StaticResource MaterialDesignFilledPasswordFieldPasswordBox}"
                                 materialDesign:HintAssist.Hint="Пароль" Margin="0,0,0,16" />
                    <Button
                      Style="{StaticResource MaterialDesignRaisedButton}" Click="OnLoginButtonClick">
                      Войти
                    </Button>
                  </StackPanel>
                </Border>
              </StackPanel>
            </materialDesign:Card>
          </Grid>
        </DockPanel>
      </ContentControl>
    </materialDesign:DrawerHost>
  </materialDesign:DialogHost>
</Window>